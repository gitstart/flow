{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true /* Enable error reporting when local variables aren't read. */,
    "jsx": "react-jsx",
    "disableSourceOfProjectReferenceRedirect": false
  },
  "include": ["src"],
  // TODO: try to ignore the import of @flowdev/web (it's only used for types)
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "apps/web",
    "@flowdev/web",
    "../../../apps/web",
    "../../apps/web",
    "../../apps/web/src/relay/environment.tsx",
    "../../packages/plugin",
    "@flowdev/plugin",
    "../../apps/web/**",
    "**/apps/web",
    "../apps/web",
    "../**/apps/web",
    "../../**/apps/web"
  ]
}
